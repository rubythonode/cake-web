{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "dist",
      "node_modules"
    ]
  },
  "rules": {
    "no-boolean-literal-compare": false,
    "object-literal-sort-keys": [
      true,
      "shorthand-first"
    ],
    "typedef": [
      true,
      "call-signature",
      "object-destructuring",
      "variable-declaration"
    ]
  }
}
